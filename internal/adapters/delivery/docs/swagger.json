{
    "swagger": "2.0",
    "info": {
        "description": "API para gerenciamento de questões e respostas",
        "title": "Questão Certa API",
        "contact": {
            "name": "Eduardo Melo",
            "email": "deveduardomelo@gmail.com"
        },
        "version": "1.0"
