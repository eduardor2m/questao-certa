                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "description": "Lista todas as questões",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Question"
                ],
                "summary": "Lista todas as questões",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Número da página",
                        "name": "page",
