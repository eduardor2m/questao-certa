{
    "swagger": "2.0",
    "info": {
        "description": "Reserva de quartos para Hotéis",
        "title": "Reservify API",
        "contact": {
            "name": "Eduardo Melo",
            "email": "deveduardomelo@gmail.com"
        },
        "version": "1.0"
    },
    "basePath": "/api",
    "paths": {
        "/question": {
            "post": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "description": "Cria uma questão de múltipla escolha, onde só é possível uma resposta correta",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Question"
                ],
                "summary": "Cria uma questão de múltipla escolha",
                "parameters": [
                    {
                        "description": "Dados da questão de múltipla escolha",
                        "name": "question",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/request.MultipleChoiceDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Questão criada com sucesso",
                        "schema": {
                            "$ref": "#/definitions/response.InfoResponse"
                        }
                    },
                    "400": {
                        "description": "Erro ao criar questão",
                        "schema": {
                            "$ref": "#/definitions/response.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "request.MultipleChoiceDTO": {
            "type": "object",
            "properties": {
                "answer": {
                    "type": "string"
                },
                "content": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "model": {
                    "type": "string"
                },
                "options": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "organization": {
                    "type": "string"
                },
                "question": {
                    "type": "string"
                },
                "topic": {
                    "type": "string"
                },
                "year": {
                    "type": "string"
                }
            }
        },
        "response.ErrorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "response.InfoResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "bearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}