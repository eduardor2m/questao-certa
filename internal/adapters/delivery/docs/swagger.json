            "get": {
                "description": "Verifica se o usuário está logado ou é admin",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Verifica se o usuário está logado ou é admin",
                "parameters": [
                    {
                        "type": "string",
